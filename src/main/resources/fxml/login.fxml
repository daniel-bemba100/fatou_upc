<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.hotelmanager.controller.LoginController">
    
    <VBox styleClass="login-container" alignment="CENTER" spacing="20">
        <padding>
            <Insets top="50" right="40" bottom="50" left="40"/>
        </padding>
        
        <!-- Logo -->
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
            <image>
                <Image url="@../images/hotel-icon.png"/>
            </image>
        </ImageView>
        
        <!-- Title -->
        <Label text="Hotel Manager Pro" styleClass="login-title"/>
        <Label text="Sign in to your account" styleClass="login-subtitle"/>
        
        <!-- Username Field -->
        <VBox spacing="5">
            <Label text="Username" styleClass="label"/>
            <TextField fx:id="usernameField" promptText="Enter username" 
                       styleClass="text-field" maxWidth="280"/>
        </VBox>
        
        <!-- Password Field with visibility toggle -->
        <VBox spacing="5">
            <Label text="Password" styleClass="label"/>
            <StackPane>
                <PasswordField fx:id="passwordField" promptText="Enter password" 
                              styleClass="password-field" maxWidth="280"/>
                <TextField fx:id="passwordTextField" promptText="Enter password" 
                           styleClass="password-field" maxWidth="280" visible="false"/>
                <Button fx:id="togglePasswordVisibility" styleClass="visibility-toggle-btn" 
                        onAction="#togglePasswordVisibility" StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets right="10"/>
                    </StackPane.margin>
                </Button>
            </StackPane>
        </VBox>
        
        <!-- Error Message -->
        <Label fx:id="errorLabel" text="" styleClass="label-danger" 
               visible="false" managed="false"/>
        
        <!-- Login Button -->
        <Button text="Sign In" styleClass="btn, btn-primary" 
                maxWidth="280" prefHeight="40" 
                onAction="#handleLogin"/>
        
        <!-- Register Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" styleClass="label-secondary"/>
            <Button text="Create Admin Account" styleClass="link-btn" 
                    onAction="#navigateToRegistration"/>
        </HBox>
        
        <!-- Footer -->
        <Label fx:id="footerLabel" text="Â© 2026 Hotel Manager Pro" styleClass="label-secondary" 
               style="-fx-font-size: 12px;"/>
    </VBox>
</StackPane>
