<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.hotelmanager.controller.AdminRegistrationController">
    
    <HBox spacing="0" maxWidth="800" maxHeight="600">
        
        <!-- Left Side - Decorative Panel -->
        <VBox styleClass="decorative-panel" alignment="CENTER" prefWidth="320" prefHeight="600">
            <padding>
                <Insets top="40" right="30" bottom="40" left="30"/>
            </padding>
            
            <!-- Hotel Icon -->
            <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                <image>
                    <Image url="@../images/hotel-icon.png"/>
                </image>
            </ImageView>
            
            <Label text="Hotel Manager Pro" styleClass="panel-title"/>
            <Label text="Create your admin account to get started" styleClass="panel-subtitle" 
                   textAlignment="CENTER" wrapText="true"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <Label text="✓ Secure Registration" styleClass="panel-feature"/>
            <Label text="✓ Easy Management" styleClass="panel-feature"/>
            <Label text="✓ Real-time Analytics" styleClass="panel-feature"/>
        </VBox>
        
        <!-- Right Side - Registration Form -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                     styleClass="form-scroll-pane" prefWidth="480">
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="20" right="40" bottom="40" left="40"/>
                </padding>
                
                <!-- Back Button -->
                <HBox alignment="CENTER_LEFT" prefWidth="350">
                    <Button text="← Back to Login" styleClass="back-btn" 
                            onAction="#navigateToLogin"/>
                </HBox>
                
                <!-- Title -->
                <Label text="Admin Registration" styleClass="form-title"/>
                <Label text="Fill in your details below" styleClass="form-subtitle"/>
                
                <!-- Form Fields Container -->
                <VBox spacing="18" alignment="CENTER" maxWidth="350">
                    
                    <!-- Username Field -->
                    <VBox spacing="5">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Enter username" 
                                   styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="5">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Enter password (min 6 chars)" 
                                      styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- Confirm Password Field -->
                    <VBox spacing="5">
                        <Label text="Confirm Password" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" 
                                      styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- Email Field -->
                    <VBox spacing="5">
                        <Label text="Email (Optional)" styleClass="field-label"/>
                        <TextField fx:id="emailField" promptText="Enter email" 
                                   styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- First Name Field -->
                    <VBox spacing="5">
                        <Label text="First Name (Optional)" styleClass="field-label"/>
                        <TextField fx:id="firstNameField" promptText="Enter first name" 
                                   styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- Last Name Field -->
                    <VBox spacing="5">
                        <Label text="Last Name (Optional)" styleClass="field-label"/>
                        <TextField fx:id="lastNameField" promptText="Enter last name" 
                                   styleClass="modern-text-field"/>
                    </VBox>
                    
                    <!-- Phone Field -->
                    <VBox spacing="5">
                        <Label text="Phone Number (Optional)" styleClass="field-label"/>
                        <TextField fx:id="phoneField" promptText="Enter phone number" 
                                   styleClass="modern-text-field"/>
                    </VBox>
                </VBox>
                
                <!-- Error/Success Message -->
                <Label fx:id="errorLabel" text="" styleClass="message-label" 
                       visible="false" managed="false" wrapText="true" maxWidth="350" 
                       textAlignment="CENTER"/>
                
                <!-- Register Button -->
                <Button text="Create Admin Account" styleClass="modern-btn, modern-btn-primary" 
                        maxWidth="350" prefHeight="45" prefWidth="350"
                        onAction="#handleRegister">
                    <font>
                        <Font size="15"/>
                    </font>
                </Button>
                
                <!-- Note -->
                <Label text="* Required fields" styleClass="required-note"/>
                
                <!-- Footer -->
                <Label fx:id="footerLabel" text="© 2026 Hotel Manager Pro" styleClass="form-footer"/>
            </VBox>
        </ScrollPane>
    </HBox>
</StackPane>

